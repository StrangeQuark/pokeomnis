.equ LOCALID_JACE, 1
.equ LOCALID_KEEGAN, 2
.equ LOCALID_JEFF, 3
.equ LOCALID_ELI, 4

MauvilleCity_Gym_B1F_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, MauvilleCity_Gym_B1F_OnTransition
	.byte 0

MauvilleCity_Gym_B1F_OnTransition:
	call MauvilleCity_Gym_B1F_EventScript_SetTrainerTempVars
	call MauvilleCity_Gym_B1F_EventScript_CheckBuryTrainers
	end

@ Unclear where/if these temp vars are getting checked
MauvilleCity_Gym_B1F_EventScript_SetTrainerTempVars::
	setvar VAR_TEMP_7, 0
	setvar VAR_TEMP_8, 0
	setvar VAR_TEMP_9, 0
	setvar VAR_TEMP_A, 0
	goto_if_defeated TRAINER_KEEGAN, MauvilleCity_Gym_B1F_EventScript_SetJaceTempVar
	setvar VAR_TEMP_7, 1
MauvilleCity_Gym_B1F_EventScript_SetJaceTempVar::
	goto_if_defeated TRAINER_JACE, MauvilleCity_Gym_B1F_EventScript_SetJeffTempVar
	setvar VAR_TEMP_8, 1
MauvilleCity_Gym_B1F_EventScript_SetJeffTempVar::
	goto_if_defeated TRAINER_JEFF, MauvilleCity_Gym_B1F_EventScript_SetEliTempVar
	setvar VAR_TEMP_9, 1
MauvilleCity_Gym_B1F_EventScript_SetEliTempVar::
	goto_if_defeated TRAINER_ELI, MauvilleCity_Gym_B1F_EventScript_EndSetTrainerTempVars
	setvar VAR_TEMP_A, 1
MauvilleCity_Gym_B1F_EventScript_EndSetTrainerTempVars::
	return

MauvilleCity_Gym_B1F_EventScript_CheckBuryTrainers::
	goto_if_defeated TRAINER_KEEGAN, MauvilleCity_Gym_B1F_EventScript_CheckBuryJace
	setobjectmovementtype LOCALID_KEEGAN, MOVEMENT_TYPE_BURIED
MauvilleCity_Gym_B1F_EventScript_CheckBuryJace::
	goto_if_defeated TRAINER_JACE, MauvilleCity_Gym_B1F_EventScript_CheckBuryJeff
	setobjectmovementtype LOCALID_JACE, MOVEMENT_TYPE_BURIED
MauvilleCity_Gym_B1F_EventScript_CheckBuryJeff::
	goto_if_defeated TRAINER_JEFF, MauvilleCity_Gym_B1F_EventScript_CheckBuryEli
	setobjectmovementtype LOCALID_JEFF, MOVEMENT_TYPE_BURIED
MauvilleCity_Gym_B1F_EventScript_CheckBuryEli::
	goto_if_defeated TRAINER_ELI, MauvilleCity_Gym_B1F_EventScript_EndCheckBuryTrainers
	setobjectmovementtype LOCALID_ELI, MOVEMENT_TYPE_BURIED
MauvilleCity_Gym_B1F_EventScript_EndCheckBuryTrainers::
	return

